                <i class="fa fa-arrow-up fa-stack-1x fa-inverse" aria-hidden="true"></i>
            </span>
        </a>
    </div>
    <md-sidenav md-component-id="left" md-whiteframe="4" md-is-locked-open="false">
        <md-toolbar class="md-light-blue">
            <h1>Your logo</h1>
        </md-toolbar>
        <md-content layout-padding>
            <md-list>

                <md-list-item>
                    <md-icon> <i class="fa fa-bars" aria-hidden="true"></i></md-icon>
                    @Html.ActionLink("Home", "Index", "Home")
                </md-list-item>
                <md-list-item>
                    <md-icon> <i class="fa fa-bars" aria-hidden="true"></i></md-icon>
                    @Html.ActionLink("Home", "Index", "Home")
                </md-list-item>
                <md-list-item>
                    <md-icon> <i class="fa fa-bars" aria-hidden="true"></i></md-icon>
                    @Html.ActionLink("Home", "Index", "Home")
                </md-list-item>
                <md-list-item>
                    <md-icon> <i class="fa fa-bars" aria-hidden="true"></i></md-icon>
                    @Html.ActionLink("Home", "Index", "Home")
                </md-list-item>
                <md-list-item>
                    <md-icon> <i class="fa fa-bars" aria-hidden="true"></i></md-icon>
                    @Html.ActionLink("Home", "Index", "Home")
                </md-list-item>
            </md-list>

        </md-content>
    </md-sidenav>



<div class="container body-content">
  
    <!--header-->
    <div class="navbar md-light-blue navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <md-toolbar flex layout="row" md-scroll-shrink=false>
                    <div class="md-toolbar-tools">
                        <md-button ng-click="toggleLeft('left')" class="md-icon-button" aria-label="left nav trigger" hide-gt-sm>
                            <i class="fa fa-bars" aria-hidden="true"></i>
                        </md-button>
                        <md-button aria-label="Sample App" class="md-textIcon">
                            Sample App
                        </md-button>
                    </div>

                </md-toolbar>

            </div>


        </div>
    </div>

    <!--loading div-->
    <div class="alert md-iconBg text-center myGlobalTopLoading" ng-show="baseSharedObj.isLoading">
        <i aria-hidden="true" class="fa fa-refresh fa-spin fa-fw"></i>
        <span class="sr-only">Loading...</span>
    </div>
    <div class="boxWithPadding">
        @RenderBody()
    </div>

    <hr/>
    <footer>
        <p>
            <span class="appVersion" ng-bind="baseSharedObj.appVersion"></span> <br/>
            &copy; @DateTime.Now.Year - My Sample Project
        </p>
    </footer>
</div>
    

      
        @Scripts.Render("~/bundles/angularCore")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")

        <!-- Angular Material Library -->
        <script src="http://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.js"></script>

        @Scripts.Render("~/bundles/myAngular")
        @RenderSection("scripts", required: false)

</body>
</html>
